@model Bai_1.Models.Register
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Style/Register.css" rel="stylesheet" />
    <title>Register</title>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @using (Html.BeginForm("Register", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="wrapper">
        <div class="item item_header">THÔNG TIN VỀ ĐƠN VỊ TUYỂN</div>

        <div class="item item_content"><p>Tên đơn vị tuyển (*)</p></div>
        <div class="item item_input">
            @Html.EditorFor(model => model.Ten_Don_Vi_Tuyen, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Ten_Don_Vi_Tuyen, "", new { @class = "text-danger" })
        </div>

        <div class="item item_content"><p>Loại hình doanh nghiệp (*)</p></div>
        <div class="item item_input">
            @Html.DropDownListFor(model => model.Loai_Hinh_Doanh_Nghiep, ViewBag.LoaiHinhList as List<SelectListItem>, "Chọn loại hình doanh nghiệp", new { @class = "Drop_List" })
        </div>

        <div class="item item_content"><p>Số Lượng Nhân Viên</p></div>
        <div class="item item_input">
            @Html.EditorFor(model => model.So_Luong_Nhan_Vien, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.So_Luong_Nhan_Vien, "", new { @class = "text-danger" })
        </div>

        <div class="item item_header">THÔNG TIN LIÊN HỆ</div>

        <div class="item item_content"><p>Địa Chỉ (*)</p></div>
        <div class="item item_input">
            @Html.EditorFor(model => model.Dia_Chi, new { htmlAttributes = new { @class = "Input_dc" } })
            @Html.ValidationMessageFor(model => model.Dia_Chi, "", new { @class = "text-danger" })
        </div>

        <div class="item item_content"><p>Người liên hệ (*)</p></div>
        <div class="item item_input">
            @Html.EditorFor(model => model.Nguoi_Lien_He, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nguoi_Lien_He, "", new { @class = "text-danger" })
        </div>

        <div class="item item_content"><p>Số Điện Thoại (*)</p></div>
        <div class="item item_input">
            @Html.EditorFor(model => model.So_Dien_Thoai, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.So_Dien_Thoai, "", new { @class = "text-danger" })
        </div>

        <div class="item item_content"><p>Số Fax</p></div>
        <div class="item item_input">
            @Html.EditorFor(model => model.So_Fax, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.So_Fax, "", new { @class = "text-danger" })
        </div>

        <div class="item item_content"><p>Email</p></div>
        <div class="item item_input">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>

        <div class="item item_header">THÔNG TIN ĐĂNG NHẬP</div>

        <div class="item item_content"><p>Tên Đăng Nhập (*)</p></div>
        <div class="item item_input">
            @Html.EditorFor(model => model.Ten_Dang_Nhap, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Ten_Dang_Nhap, "", new { @class = "text-danger" })
        </div>

        <div class="item item_content"><p>Mật Khẩu (*)</p></div>
        <div class="item item_input">
            @Html.EditorFor(model => model.Mat_Khau, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Mat_Khau, "", new { @class = "text-danger" })
        </div>

        <div class="item item_content"><p>Xác Nhận Mật Khẩu (*)</p></div>
        <div class="item item_input">
            @Html.EditorFor(model => model.Xac_Nhan_Mat_Khau, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Xac_Nhan_Mat_Khau, "", new { @class = "text-danger" })
        </div>

        <div class="item item_header">NHẬN EMAIL</div>

        <div class="item item_content"><p>Nhận Thư Điện Tử</p></div>
        <div class="item item_input">
            <label>
                @Html.RadioButtonFor(model => model.Nhan_Thu_Dien_Tu, "Nhận", new { id = "Nhận", @class = "radio_btn", style = "margin-right: 5px;" }) Nhận
            </label>
            <label>
                @Html.RadioButtonFor(model => model.Nhan_Thu_Dien_Tu, "Không Nhận", new { id = "Không Nhận", @class = "radio_btn", style = "margin-right: 5px;" }) Không Nhận
            </label>
        </div>

        <div class="item item_header">
            <input class="End" type="submit" value="Đăng Ký" />
            <input class="End" type="submit" value="Hủy Bỏ" />
        </div>
    </div>
     }
        <div>
            @Html.ActionLink("Back to Home", "Index", "Home")
        </div>
</body>
</html>
