@model List<Bai1.Models.Employee>
@{
    ViewBag.Title = "Show_Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    th{
        padding: 12px;
        border: 1px solid black;
        width: max-content;
    }
</style>

<table style="border: 1px solid black">
    <tr>
        <th>Mã Sản Phẩm</th>
        <th>Tên Sản Phẩm</th>
        <th>Đường Dẫn</th>
        <th>Giá Bán</th>
        <th>Mô Tả</th>
        <th>Mã Loại</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>Mã Sản Phẩm : @item.masp</th>
            <th>Tên Sản Phẩm : @item.tensp</th>
            <th>Đường Dẫn : @item.duongdan</th>
            <th>Giá Bán : @item.gia</th>
            <th>Mô Tả : @item.mota</th>
            <th>Mã Loại : @item.maloai</th>
        </tr>
    }
</table>

